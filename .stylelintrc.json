{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "**/*.js",
    "**/*.html"
  ],
  "plugins": [
    "stylelint-order",
    "@namics/stylelint-bem"
  ],
  "rules": {
    "indentation": 4,
    "number-leading-zero": "never",
    "string-quotes": "single",
    "order/properties-alphabetical-order": true,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global",
          "local"
        ]
      }
    ],
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "plugin/stylelint-bem-namics": {
        "patternPrefixes": [],
        "helperPrefixes": []
    }
  }
}
