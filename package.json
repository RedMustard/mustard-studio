{
  "private": true,
  "name": "mustard-studio",
  "author": {
    "name": "RedMustard.io",
    "email": "travis@redmustard.io",
    "url": "https://redmustard.io"
  },
  "description": "Electron-based polysynth and step sequencer",
  "version": "0.0.0",
  "license": "MIT",
  "main": "electron/main.ts",
  "homepage": "./",
  "scripts": {
    "build": "NODE_ENV=production preact build --no-prerender",
    "build-storybook": "build-storybook",
    "clean": "rm -rf release && rm -rf build",
    "dev": "preact watch",
    "edev": "nf start",
    "electron": "if-env NODE_ENV=production electron . || electron . --dev",
    "ebuild": "npm run clean && npm run build && npm run fixup && NODE_ENV=production node_modules/.bin/electron-builder -mw",
    "fixup": "node electron/buildFixup.js",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "serve": "npm run build && sirv build --port 8080 --cors --single",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "storybook": "start-storybook -p 6006",
    "test": "jest ./src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "clone": "^2.1.2",
    "preact": "^10.3.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@namics/stylelint-bem": "^6.3.1",
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/preact": "^6.2.9",
    "@teamsupercell/typings-for-css-modules-loader": "^2.2.0",
    "@types/clone": "^0.1.30",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-to-json": "^1.5.4",
    "@types/jest": "^26.0.20",
    "@types/webmidi": "^2.0.4",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-loader": "^8.2.2",
    "core-js": "^3.8.2",
    "css-loader": "^3.5.3",
    "electron": "^13.1.1",
    "electron-builder": "^22.10.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "foreman": "^3.0.1",
    "husky": "^4.2.1",
    "if-env": "^1.0.4",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "lint-staged": "^10.0.7",
    "node-sass": "^5.0.0",
    "preact-cli": "^3.2.2",
    "prettier": "^1.19.1",
    "sass-loader": "^10.1.1",
    "sirv-cli": "^1.0.0-next.3",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "typescript": "^4.1.3",
    "web-audio-mock-api": "^1.0.0",
    "webpack-cli": "^4.7.0"
  }
}
